{
  "name": "visual-todo-app",
  "version": "0.1.0",
  "description": "AIイラスト付きタスク管理アプリ - AI-powered task management app with personalized illustrations",
  "main": "dist/src/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"node scripts/wait-on-vite.js && npm run dev:main\"",
    "dev:worktree": "cross-env VITE_PORT=5174 concurrently \"npm run dev:renderer\" \"node scripts/wait-on-vite.js && npm run dev:main\"",
    "dev:renderer": "vite --mode development",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/src/main/main.js --dev --no-sandbox --disable-dev-shm-usage",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "todo",
    "task-management",
    "ai",
    "illustration",
    "productivity",
    "electron",
    "react"
  ],
  "author": "Visual TODO App",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@google/genai": "^1.7.0",
    "@types/uuid": "^9.0.7",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "node-notifier": "^10.0.1",
    "openai": "^4.104.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "zod": "^3.25.67"
  },
  "build": {
    "appId": "com.visualtodo.app",
    "productName": "Visual TODO App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "draft"
      }
    ]
  }
}
